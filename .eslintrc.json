{
    "parser": "babel-eslint",
    "env": {
        "mocha": true,
        "es6": true,
        "node": true,
        "browser": true
    },
    "rules": {
        "linebreak-style": 0,
        "no-console": 0,
        "indent": [
            2,
            4
        ],
        "quotes": [
            2,
            "single"
        ],
        "semi": [
            2,
            "always"
        ],
        "comma-dangle": [
            "error",
            "only-multiline"
        ]
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    }
}
